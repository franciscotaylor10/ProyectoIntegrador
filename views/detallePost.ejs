<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
    <% if (userlogged) { %>
        <%- include('./partials/headerLogueado') %>
    <% }else{ %>
    <%- include('./partials/headerDeslogueado') %>
    <% } %>

    <main class="login">
        <div class="uk-section uk-section-xsmall">
            <div class="uk-container uk-container-large uk-flex uk-flex-middle uk-flex-center">
                <section class="uk-flex uk-width-2-3 detalle-container fondo-detalle">
                    <% if (userlogged && userlogged.id == post.user.id) { %>
                        <div>
                            <form action="/posts/editar/<%= post.id %> ">
                            <button>Editar Post</button>
                        </form>
                            <form action="/posts/borrar" method="POST">
                                <input type="hidden" value="<%= post.id %>" name="id">
                               <button>Borrar Post</button>
                           </form>
                        </div>
                    <% } %>
                    <article class="uk-width-2-3 uk-flex uk-flex-center uk-flex-middle detalle-post">
                        <img src="<%= post.imagen %> " alt="Imagen del post" class="imagen-post ">
                    </article>
                    <article class="uk-width-1-3 uk-flex uk-flex-column comentarios-detalle">
                        <div class="info-post uk-flex uk-flex-middle">
                            <img src="<%= post.user.imagen %> " alt="Foto del usuario" class="fotoPerfil">
                            <h3><a class="hipervinculo" href="/users/detalleUsuario/<%= post.user.id %> "><%= post.user.nombre_de_usuario %> </a></h3>
                        </div>
                        <% if (likeado) { %>
                            <a href="/posts/dislike/<%= post.id %> "><span class="" uk-icon="icon:heart; ratio: 1.3" style="color: red;"></span></a>
                        <% }else{ %>
                        <a href="/posts/like/<%= post.id %>"><span class="" uk-icon="icon:heart; ratio: 1.3"></span></a>
                        <% } %>
                        <div class="lista-comentarios" >
                            <% for( let i = 0; i < post.comments.length; i++ ) { %>
                                <div class="comentario uk-flex uk-flex-middle uk-margin-small-top">
                                    <div class="uk-width-1-4 uk-flex uk-flex-center">
                                        <img src="<%= post.comments[i].user.imagen %> " alt="Foto de usuario"class="fotoPerfil">
                                    </div>
                                    <h6 class="uk-margin-remove uk-width-2-4"><a href="/users/detalleUsuario/<%= post.comments[i].user.id %>"><%= post.comments[i].user.nombre_de_usuario %></a><%= post.comments[i].comentario %> </h6>
                                    <a href="" uk-icon="icon:heart; ratio: 0.8" class="uk-width-1-4 uk-text-right icono-meGusta"></a>
                                </div> 
                            <% } %> 
                        </div>
                        
                            <div class="agregar-comentario uk-flex uk-flex-middle">
                                <form action="/posts/comentario" class="uk-text-center" method="POST">
                                    <input type="hidden" value="<%= post.id %>" name="post_id">
                                  <input type="text" class="uk-input" placeholder="Agregar comentario" name="comentario"> 
                                  <button class="uk-button uk-button-primary uk-margin-small-top" type="submit">Comentar</button>
                                </form>
                            </div>
                    </article>
                </section>
            </div>
        </div>
    </main>

    <%- include('./partials/footer') %>

</body>

</html>